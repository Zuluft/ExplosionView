<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExplosionView">
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="ItemsCount" format="integer" />
        <attr name="drawable" format="integer" />
        <attr name="minMoveFactor" format="float" />
        <attr name="maxMoveFactor" format="float" />
        <attr name="minAnimDuration" format="integer" />
        <attr name="maxAnimDuration" format="integer" />
        <attr name="minAnimDelay" format="integer" />
        <attr name="maxAnimDelay" format="integer" />
        <attr name="minScale" format="float" />
        <attr name="maxScale" format="float" />
        <attr name="minAlpha" format="float" />
        <attr name="maxAlpha" format="float" />
        <attr name="isDraggable" format="boolean" />
        <attr name="horizontalOffset" format="dimension" />
        <attr name="spreadDirection" format="enum">
            <enum name="TOP" value="0" />
            <enum name="BOTTOM" value="1" />
        </attr>
        <attr name="spreadMode" format="enum">
            <enum name="UNIDIRECTIONAL" value="0" />
            <enum name="BIDIRECTIONAL" value="1" />
        </attr>
    </declare-styleable>

    <dimen name="defaultItemWidth">40dp</dimen>
    <integer name="defaultItemsCount">100</integer>
    <integer name="defaultMinAnimDuration">1000</integer>
    <integer name="defaultMaxAnimDuration">10000</integer>
    <integer name="defaultMinAnimDelay">1000</integer>
    <integer name="defaultMaxAnimDelay">10000</integer>
    <item name="defaultMinScale" format="float" type="dimen">0.7</item>
    <item name="defaultMaxScale" format="float" type="dimen">1.1</item>
    <item name="defaultMinAlpha" format="float" type="dimen">0.5</item>
    <item name="defaultMaxAlpha" format="float" type="dimen">1</item>
    <item name="defaultMinMoveFactor" format="float" type="dimen">0.7</item>
    <item name="defaultMaxMoveFactor" format="float" type="dimen">0.8</item>
    <dimen name="defaultHorizontalOffset">1dp</dimen>
    <integer name="defaultSpreadDirection">0</integer>
    <integer name="defaultSpreadMode">0</integer>
    <bool name="defaultIsDraggable">false</bool>
</resources>
