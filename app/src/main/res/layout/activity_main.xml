<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExplode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Explode"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCollapse"
        app:layout_constraintWidth_percent="0.7"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCollapse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Collapse"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnExplode"
        app:layout_constraintWidth_percent="0.7"
        tools:ignore="HardcodedText" />

    <com.zuluft.lib.ExplosionView
        android:id="@+id/explosionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:moveFactor="2"
        app:animDuration="3000"
        app:shardItemsCount="80"
        app:horizontalOffset="0dp"
        app:itemSize="30dp"
        app:spreadDirection="TOP" />

</androidx.constraintlayout.widget.ConstraintLayout>